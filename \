#include "libft.h"

size_t  ft_strlcat(char *dst, const char *src, size_t dstsize)
{
    size_t  len_src;
	size_t	len_dst;
	size_t	results;
	size_t	i;

	len_src = ft_strlen(src);
	len_dst = ft_strlen (dst);
	result = 0;
	i = 0;
	if (dstsize > len_dst)
		result  = dst_len + dst_src;
	else
		result = len_src + dstsize;
	while (src[i] && len_dst + 1 <dstsize)
	{
		dst[len_dst] = src[i];
		len_dst++;
		i++;
	}
	dst[len_dst] = 0;
}
